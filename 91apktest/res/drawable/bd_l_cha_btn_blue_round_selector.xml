<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bd_l_cha_text_blue" />
            <corners android:radius="6.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bd_l_cha_text_blue_deep" />
            <corners android:radius="6.0dip" />
            <padding android:left="2.0dip" android:top="5.0dip" android:right="2.0dip" android:bottom="5.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="6.0dip" />
            <padding android:left="2.0dip" android:top="5.0dip" android:right="2.0dip" android:bottom="5.0dip" />
        </shape>
    </item>
</selector>